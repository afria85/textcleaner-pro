{
  "name": "textcleaner-pro",
  "version": "2.0.0",
  "description": "Enterprise text processing and data cleaning platform",
  "private": true,
  "type": "module",
  "main": "src/main.tsx",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "jest",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,md}\"",
    "update-status": "node scripts/update-status.js",
    "cleanup": "node scripts/cleanup.js",
    "deploy:vercel": "vercel --prod",
    "deploy:preview": "vercel",
    "docker:build": "docker build -t textcleaner-pro .",
    "docker:run": "docker-compose up -d",
    "security": "npm audit"
  },
  "keywords": [
    "text-processing",
    "data-cleaning",
    "enterprise",
    "productivity",
    "pwa",
    "react",
    "typescript"
  ],
  "author": {
    "name": "TextCleaner Pro Team",
    "email": "engineering@textcleaner.pro",
    "url": "https://textcleaner.pro"
  },
  "license": "MIT",
  "contributors": [
    {
      "name": "Engineering Team",
      "email": "dev@textcleaner.pro"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/textcleaner-pro/textcleaner-pro.git"
  },
  "bugs": {
    "url": "https://github.com/textcleaner-pro/textcleaner-pro/issues"
  },
  "homepage": "https://textcleaner.pro",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "classnames": "^2.3.2",
    "compressorjs": "^1.2.1",
    "crypto-js": "^4.1.1",
    "dayjs": "^1.11.9",
    "file-saver": "^2.0.5",
    "jszip": "^3.10.1",
    "localforage": "^1.10.0",
    "lodash": "^4.17.21",
    "marked": "^9.0.0",
    "nanoid": "^4.0.2",
    "pako": "^2.1.0",
    "papaparse": "^5.4.1",
    "prismjs": "^1.29.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-icons": "^4.12.0",
    "uuid": "^9.0.0",
    "xregexp": "^5.1.1",
    "zod": "^3.21.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/crypto-js": "^4.1.2",
    "@types/file-saver": "^2.0.5",
    "@types/jest": "^29.5.4",
    "@types/lodash": "^4.14.199",
    "@types/node": "^20.5.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/uuid": "^9.0.2",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.47.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "jest": "^29.6.3",
    "jest-environment-jsdom": "^29.6.3",
    "postcss": "^8.4.28",
    "prettier": "^3.0.2",
    "sass": "^1.64.1",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.1.6",
    "vercel": "^49.1.1",
    "vite": "^4.4.9",
    "vite-plugin-pwa": "^0.16.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all",
      "not ie > 0",
      "not samsung > 0",
      "not baidu > 0"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.stories.{js,jsx,ts,tsx}",
      "!src/**/*.test.{js,jsx,ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
